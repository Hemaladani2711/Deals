<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/RelativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnBackNewUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnBackNewUser"
            android:layout_centerHorizontal="true"
            android:text="User Info"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edtUserZipcode"
            android:layout_below="@+id/edtUserZipcode" >
        </RadioGroup>

        <EditText
            android:id="@+id/edtEnterYourName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Name"
            android:inputType="textPersonName"
            android:layout_below="@+id/textView1"
            android:layout_alignLeft="@+id/edtEmailUser"
            android:layout_alignStart="@+id/edtEmailUser"
            android:layout_marginTop="40dp">

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edtUserZipcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter zip code"
            android:inputType="number"

            android:layout_below="@+id/edtCountryName"
            android:layout_alignLeft="@+id/edtCountryName"
            android:layout_alignStart="@+id/edtCountryName" />

        <RadioButton
            android:id="@+id/rdoUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Consumer"
            android:layout_below="@+id/radioGroup1"
            android:layout_toLeftOf="@+id/btnUserSubmit"
            android:layout_toStartOf="@+id/btnUserSubmit"
            android:layout_marginTop="44dp" />

        <RadioButton
            android:id="@+id/rdoBusiness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/rdoUser"
            android:layout_alignBottom="@+id/rdoUser"
            android:layout_toRightOf="@+id/textView1"
            android:text="Business" />

        <EditText
            android:id="@+id/edtEmailUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:layout_below="@+id/edtEnterYourMobile"
            android:layout_centerHorizontal="true" />

        <EditText
            android:id="@+id/edtEnterYourMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Mobile No"
            android:inputType="phone"
            android:layout_below="@+id/edtEnterYourName"
            android:layout_centerHorizontal="true" />


        <EditText
            android:id="@+id/edtPasswordUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Password"
            android:inputType="textPassword"
            android:layout_below="@+id/edtEmailUser"
            android:layout_alignLeft="@+id/edtEmailUser"
            android:layout_alignStart="@+id/edtEmailUser"
            />

        <Button
            android:id="@+id/btnUserSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@+id/rdoUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp" />

        <AutoCompleteTextView
            android:id="@+id/edtCountryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Enter Your Country Full name"
            android:inputType="textPersonName"
            android:layout_below="@+id/edtPasswordUser"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</ScrollView>