<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <ImageView
            android:src="@drawable/logo99"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_marginBottom="24dp" />

        <RelativeLayout
            android:id="@+id/RelativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="364dp"
            android:orientation="vertical"
            android:layout_weight="0.78">

            <EditText
                android:id="@+id/edtEmailExistingUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rdoExistingUser"
                android:layout_centerHorizontal="true"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:hint="name@email.com"
                android:textColorHint="@color/iron">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/edtExistingUserPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/edtEmailExistingUser"
                android:layout_below="@+id/edtEmailExistingUser"
                android:ems="10"
                android:hint="password"
                android:textColorHint="@color/iron"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/btnExistingUserLogin"
                android:layout_width="100dp"
                android:padding="12dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/edtExistingUserPw"
                android:layout_alignStart="@+id/edtExistingUserPw"
                android:background="@color/primary_darker"
                android:text="login"
                android:textColor="@color/white"/>



            <Button
                android:id="@+id/btnForgotPW"
                android:layout_width="100dp"
                android:padding="12dp"
                android:layout_height="50dp"
                android:adjustViewBounds="true"
                android:text="forgot"
                android:textColor="@color/white"
                android:background="@color/primary_darker"
                android:layout_alignTop="@+id/btnExistingUserLogin"
                android:layout_alignRight="@+id/edtExistingUserPw"
                android:layout_alignEnd="@+id/edtExistingUserPw" />

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" >
            </RadioGroup>

            <RadioButton
                android:id="@+id/rdoExistingUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:checked="true"
                android:text="user"
                android:textColor="@color/primary_darker"
                android:textSize="20dp"/>

            <RadioButton
                android:id="@+id/rdoNewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="new user"
                android:textSize="20dp"
                android:textColor="@color/primary_darker"
                android:checked="false"
                android:layout_alignBottom="@+id/btnCheckNewUser"
                android:layout_alignRight="@+id/btnExistingUserLogin"
                android:layout_alignEnd="@+id/btnExistingUserLogin"
                android:layout_alignTop="@+id/btnCheckNewUser" />

            <Button
                android:id="@+id/btnCheckNewUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sign up"
                android:background="@color/primary_darker"
                android:textColor="@color/white"
                android:layout_below="@+id/btnForgotPW"
                android:layout_alignLeft="@+id/btnForgotPW"
                android:layout_alignStart="@+id/btnForgotPW"
                android:layout_marginTop="31dp"
                android:layout_alignRight="@+id/btnForgotPW"
                android:layout_alignEnd="@+id/btnForgotPW" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>

    </LinearLayout>

</ScrollView>